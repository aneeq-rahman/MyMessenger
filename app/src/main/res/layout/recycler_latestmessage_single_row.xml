<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="6dp"
android:background="#ffffff"
android:orientation="horizontal"
app:cardCornerRadius="4dp"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLatest"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:padding="3dp"
            android:src="@color/colorPrimary"
            app:civ_border_color="@color/common_google_signin_btn_text_light_pressed"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtLatestName"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:padding="2dp"
                android:text="Misaka"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLatestMessage"
                android:layout_width="197dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtLatestName"
                android:text="Hello"
                android:padding="3dp"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="20sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/txtLatestDate"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Sun"
            android:textSize="15sp"
            android:padding="14dp"/>


    </LinearLayout>

</RelativeLayout>